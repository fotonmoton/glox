fun sum(start, end) {
    if (start == end) return start;
    return start + sum(start + 1, end);
}

print sum(1, 3);

fun fib(n) {
    if (n <= 1) return n;

    return fib(n - 2) + fib(n - 1);
}

for (var i = 1; i <= 10; i = i + 1) {
    print fib(i);
}


